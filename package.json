{
  "name": "@europeana/metis-ui-maintenance-utils",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "build": "rm -rf ./dist && ng build",
    "clean": "rm -rf ./dist && rm -rf ./projects/**/dist && rm -rf ./projects/**/coverage",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:dev": "ng test --code-coverage",
    "publish-dry": "npm publish dist/metis-ui-maintenance-utils/ --access=public --dry-run --verbose",
    "publish-lib": "npm publish dist/metis-ui-maintenance-utils/ --access=public",
    "prettier": "prettier --write './**/*.{ts,html}'",
    "prettier:ci": "prettier --list-different './**/*.{ts,html}'",
    "lint": "eslint --ext .ts projects/metis-ui-maintenance-utils --fix",
    "lint:ci": "eslint --ext .ts projects/metis-ui-maintenance-utils"
  },
  "private": false,
  "dependencies": {
    "@angular/common": "^17.1.1",
    "@angular/compiler": "^17.1.1",
    "@angular/core": "^17.1.1",
    "@angular/platform-browser": "^17.1.1",
    "@angular/platform-browser-dynamic": "^17.1.1",
    "@types/jasmine": "^3.10.2",
    "eslint": "^8.54.0",
    "prettier": "^3.0.3",
    "rxjs": "^7.5.5",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.1.1",
    "@angular/cli": "^17.1.1",
    "@angular/compiler-cli": "^17.1.1",
    "@europeana/metis-ui-test-utils": "^0.0.18",
    "@types/jasmine": "^3.10.2",
    "@types/node": "^12.20.37",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "eslint-plugin-rxjs": "^5.0.3",
    "jasmine": "^5.1.0",
    "jasmine-core": "~3.8.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "ng-packagr": "^17.1.2",
    "typescript": "5.3.3"
  },
  "peerDependencies": {
    "jasmine": "^5.1.0"
  }
}
